html
  head
    meta(charset='utf-8')
    title Association for Computing Machinery - University of Illinois Urbana-Champaign

    meta(name='author' content='')
    meta(name='description' content='The Official Website of ACM@UIUC')
    meta(name='viewport' content='width=device-width')

    link(rel='stylesheet' href='lib/foundation-6/css/foundation.css')
    link(rel='stylesheet/less' type='text/css' href='less/main.less')


  body
    div
      .top-bar.nav
        .top-bar-left
          ul.dropdown.menu(data-dropdown-menu)
            li.menu-text
              span#title
                a#nav-home(href='/')
                  img.logo(src='images/acm-logo-flat.svg')
                  h3#title-text ACM@UIUC
            unless authenticated
              each n in nav_un_auth
                li.nav-loc
                  a(href=n.path)= n.name
            else
              each n in nav_auth
                li.nav-loc
                  a(href=n.path)= n.name
        unless login_page
          .top-bar-right
            unless authenticated
              .top-bar-right
                ul.dropdown.menu
                  li
                    a#nav-login(href='/login')
                      button#login.button Login
            if authenticated
              .top-bar-right
                ul.dropdown.menu
                  li
                    a#nav-login(href='login')
                      button#logout.button Logout
      block app

    script(src='lib/jquery-2.1.4.min.js')/
    script(src='lib/foundation-6/js/foundation.min.js')/
