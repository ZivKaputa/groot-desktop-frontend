<%- include('_partials/header') -%>

<div id="login-container">
  <div class="row col-centered small-12 medium-4 large-4 login-form">
    <% if ( messages.length > 0 ) { %>
      <div class="callout secondary">
        <p><%= messages %></p>
      </div>
    <% } %>
    <% if ( errors.length > 0 ) { %>
      <div class="callout alert">
        <p><%= errors %></p>
      </div>
    <% } %>
    
    <h3>Reset Your Password</h3>
    <p>
      Lost your password? Enter these account details and we'll generate a new password and email it to you if it matches our records.
    </p>

    <form method="post" action="/sponsors/reset_password">
      <div class="field-group required">
        <label for="first_name" class="field-label">First Name</label>
        <div class="field">
          <input id="first_name" type="text" name="first_name" ng-model="user.first_name"/>
        </div>
      </div>
      <div class="field-group required">
        <label for="last_name" class="field-label">Last Name</label>
        <div class="field">
          <input id="last_name" type="text" name="last_name" ng-model="user.last_name"/>
        </div>
      </div>
      <div class="field-group required">
        <label for="recruiter_email" class="field-label">Email</label>
        <div class="field">
          <input id="recruiter_email" type="text" name="recruiter_email" ng-model="user.email"/>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="button">Reset my password</button>
        </div>
      </div>
    </form>
  </div>
</div>

<%- include('_partials/footer') -%>
