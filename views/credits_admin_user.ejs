<%- include('_partials/header') -%>

<div id="credits-container">
  <div class="row col-centered small-12 medium-6 large-6">
    <h3>Credits Admin</h3>
    <h4>User: <%= netid %></h4>
    <div>
      <h5 style="display:inline; float:left; padding-top:20px" class="balance">User Balance: <b class="balance_amount">$<%= balance.toFixed(2) %></b></h5>
      <a class="button" name="refill" data-open="exampleModal1" style="float:right">Adjust Balance</a>
    </div>
    <% if (transactions && transactions.length != 0) { %>
      <table id="transactions-table" class="dynatable-container">
        <thead>
          <tr>
            <th> Id </th>
            <th> Amount </th>
            <th> Time </th>
            <th> Description </th>
            <th> Action </th>
          </tr>
        </thead>
        <% for (var t of transactions) { %>
          <tr class="transaction">
            <td> <%= t.id %> </td>
            <td> <%= (t.amount > 0 ? '$' : '-$') + Math.abs(t.amount).toFixed(2) %> </td>
            <td> <%= t.created_at %> </td>
            <td> <%= t.description ? t.description : "No description" %> </td>
            <td> <a href="#" onClick="deleteTransaction(<%= t.id %>)" class="button">Delete</a></td>
          </tr>
          <% } %>
        </table>
    <% } else { %>
      <h5>There are no transactions.</h5>
    <% } %>
  </div>
</div>

<div class="reveal" id="exampleModal1" data-reveal>
  <form data-abide id='credits_form' novalidate method="post" action="/credits/admin/<%= netid %>">
    <div class="amount-field">
      <label>Balance Adjustment Amount <small>required</small>
        <input name="amount" type="number" required data-validator="balance_adjustment" pattern="number" placeholder="5.00">
      </label>
      <small class="error">Balance adjustment amount is required and must be a number between -50 and 50. A positive adjustment amount will increase the user balance, a negative amount will lower the user balance.</small>
    </div>
    <button type="submit" class="button">Make Adjustment</button>
  </form>
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<script type="text/javascript">
  window.addEventListener('load', function() {
    $(document).foundation();
    $('#transactions-table').dynatable({
      features: {
        search: false,
        perPageSelect: false
      }
    });
    Foundation.Abide.defaults.validators['balance_adjustment'] =
      function($el,required,parent) {
        if (!required) return true;
        var val = Number($el.val());
        return (val >= -50 && val <= 50)
    };
  });
  function deleteTransaction(id) {
    $.ajax({
      url: "/credits/admin/transactions/" + id,
      method: "DELETE",
      success: function() {
        location.reload();
      }
    });
  }
  
</script>

<%- include('_partials/footer') -%>