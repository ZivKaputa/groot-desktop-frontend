<%- include('_partials/header') -%>

<div id="login-container">
  <div class="row col-centered small-12 medium-4 large-4 login-form">
    <h3>Recruiter Login</h3>
    <% if ( errors.length > 0 ) { %>
    <div class="callout alert">
      <p><%= errors %></p>
    </div>
    <% } %>
    
    <p>If you would like access to the ACM@UIUC Resume Book please email <a href="corporate@acm.illinois.edu">corporate@acm.illinois.edu</a>.</p>
    <form method="post" action="/sponsors/login">
      <div class="field-group required">
        <label for="email" class="field-label">Email</label>
        <div class="field">
          <input id="email" type="text" name="email" ng-model="user.email"/>
        </div>
      </div>
      <div class="field-group required">
        <label for="password" class="field-label">Password</label>
        <div class="field">
          <input id="password_login" type="password" name="password" ng-model="user.password"/>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="button">Login</button>
        </div>
      </div>
    </form>
    <p>Forgot your password? Click <a href="/sponsors/reset_password">here</a> to reset it.
  </div>
</div>

<%- include('_partials/footer') -%>
