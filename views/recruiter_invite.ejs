<%- include('_partials/header') -%>
<div id="container">
    <div class="row">
      <% if (error) { %>
        <p class="form-validation-error"><%- error %></p>
      <% } %>
      
      <h3>Invite <%= recruiter.first_name %>, a <%= recruiter.type %> recruiter from <%= recruiter.company_name %></h3>
      <form method="post">
        <div class="field-group required">
          <label for="from" class="field-label">From</label>
          <div class="field">
            <input id="from" type="text" name="from" ng-model="composer.from" value="<%= from_email %>" readonly />
          </div>
        </div>

        <div class="field-group required">
          <label for="to" class="field-label">To</label>
          <div class="field">
            <input id="to" type="text" name="to" ng-model="composer.to" value="<%= emailTemplate.to %>" />
          </div>
        </div>

        <div class="field-group required">
          <label for="subject" class="field-label">Subject</label>
          <div class="field">
            <input id="subject" type="text" name="subject" ng-model="composer.subject" value="<%= emailTemplate.subject %>" />
          </div>
        </div>

        <div class="field-group required">
          <label for="body" class="field-label">Message</label>
          <div class="field">
            <textarea id="body" type="text" name="body" rows="20" ng-model="composer.body">
              <%= emailTemplate.body %>
            </textarea>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">
            <button type="submit" class="button">Email</button>
          </div>
        </div>
      </form>
    </div>
</div>
<%- include('_partials/footer') -%>