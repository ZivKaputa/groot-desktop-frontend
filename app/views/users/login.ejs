<%- include('../_partials/header') -%>

<div id="login-container">
  <div class="row col-centered small-12 medium-4 large-4 login-form">
    <h3>Login</h3>
    <p>
      You must be an ACM Member to log into the ACM Intranet. If you are not currently a member, please consider joining ACM@UIUC!
    </p>
    <p>
      Are you a recruiter? Log in <a href="/sponsors/login">here</a> instead.
    </p>
    <% if ( errors.length > 0 ) { %>
      <div class="callout alert">
        <p><%= errors %></p>
      </div>
    <% } %>

    <p>
    <form method="post" action="/login">
      <div class="field-group required">
        <label for="netid" class="field-label">NetID</label>
        <div class="field">
          <input id="netid-login" type="text" name="netid" maxlength="8"/>
        </div>
      </div>
      <div class="field-group required">
        <label for="password" class="field-label">ActiveDirectory Password</label>
        <div class="field">
          <input id="password-login" type="password" name="password"/>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="button">Login</button>
        </div>
      </div>
    </form>
  </div>
</div>

<%- include('../_partials/footer') -%>
